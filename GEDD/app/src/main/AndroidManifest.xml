<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipleiria.estg.GEDD" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfigureTeamActivity"
            android:label="@string/title_activity_configure_team"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".StatisticsTeam"
            android:label="@string/title_activity_statistics_team"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name=".DriveActivity"
            android:label="@string/title_activity_drive"
            android:exported="true">
            <meta-data android:name="com.google.android.apps.drive.APP_ID" android:value="id=668943682556" />
            <intent-filter>
                <action android:name="com.google.android.apps.drive.DRIVE_OPEN" />
                <data android:mimeType="application/vnd.google-apps.drive-sdk.668943682556" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/octet-stream"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
