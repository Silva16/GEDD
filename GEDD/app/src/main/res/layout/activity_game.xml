            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/space3"
            android:layout_toEndOf="@+id/space3"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="115dp"
            android:layout_height="63dp"
            android:text="Falha Técnica"
            android:id="@+id/btn_ft"
            android:layout_alignRight="@+id/space3"
            android:layout_alignEnd="@+id/space3"
            android:background="@android:drawable/btn_default"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/space3"
            android:layout_marginTop="12dp" />

        <ImageButton
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:id="@+id/imgbtn_cards"
