            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/btn_block_def"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginLeft="15dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Bloco"
            android:id="@+id/btn_block_def"
            android:background="@android:drawable/btn_default"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_unarm"
            android:layout_toStartOf="@+id/btn_unarm"
            android:layout_marginTop="3dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Desarme"
            android:id="@+id/btn_unarm"
            android:background="@android:drawable/btn_default"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_interception"
