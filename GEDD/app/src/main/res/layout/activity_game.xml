        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/space2"
            android:layout_below="@+id/textView2" />

    </RelativeLayout>

    <RelativeLayout
