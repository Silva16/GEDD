<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainActivityLayout"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/players"
        android:focusable="false"
        android:layout_below="@+id/line"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/zones"
        android:layout_alignEnd="@+id/zones"
        android:background="#FFB300">

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player1"
            android:src="@drawable/ic_shirt"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgbtn_player2"
            android:layout_toStartOf="@+id/imgbtn_player2"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player2"
            android:src="@drawable/ic_shirt"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgbtn_player3"
            android:layout_toStartOf="@+id/imgbtn_player3"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player3"
            android:src="@drawable/ic_shirt"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/space"
            android:layout_toStartOf="@+id/space"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player4"
            android:src="@drawable/ic_shirt"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/space"
            android:layout_toEndOf="@+id/space"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player5"
            android:src="@drawable/ic_shirt"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player4"
            android:layout_toEndOf="@+id/imgbtn_player4"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player6"
            android:src="@drawable/ic_shirt"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player5"
            android:layout_toEndOf="@+id/imgbtn_player5"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:id="@+id/imgbtn_goalkeeper1"
            android:src="@drawable/ic_shirt"
            android:text="1 - GR"
            android:layout_below="@+id/imgbtn_player3"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_default" />


        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/space" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Substituição"
            android:id="@+id/textViewSub"
            android:textSize="16dp"
            android:height="50dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_below="@+id/imgbtn_player5"
            android:layout_alignLeft="@+id/imgbtn_player5"
            android:layout_alignStart="@+id/imgbtn_player5"
            android:layout_alignBottom="@+id/imgbtn_goalkeeper1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Guarda-Redes"
            android:id="@+id/textView13"
            android:textSize="16dp"
            android:height="50dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/imgbtn_goalkeeper1"
            android:layout_toStartOf="@+id/imgbtn_goalkeeper1"
            android:layout_alignTop="@+id/imgbtn_goalkeeper1"
            android:layout_alignBottom="@+id/imgbtn_goalkeeper1"
            android:layout_marginRight="5dp"
            android:textColor="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finalization"
        android:layout_below="@+id/players"
        android:layout_alignLeft="@+id/players"
        android:layout_alignStart="@+id/players"
        android:layout_marginTop="5dp"
        android:background="#ff1693a5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Finalização"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="138dp"
            android:layout_height="63dp"
            android:text="Contra-Ataque"
            android:id="@+id/btn_ca"
            android:textSize="13dp"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/space2"
            android:background="@android:drawable/btn_default" />

        <Button
