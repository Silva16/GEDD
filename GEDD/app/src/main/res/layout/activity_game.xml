            android:background="@android:drawable/btn_default"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="Defesa"
            android:id="@+id/btn_gk_def"
            android:layout_below="@+id/btn_gk_out"
            android:layout_toRightOf="@+id/btn_gk_out"
            android:layout_toEndOf="@+id/btn_gk_out"
            android:background="@android:drawable/btn_default" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="Fora"
            android:id="@+id/btn_gk_out"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/btn_default"
            android:layout_marginTop="3dp" />

        <Button
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:text="Golo"
            android:id="@+id/btn_gk_goal"
            android:layout_below="@+id/btn_gk_out"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btn_gk_post"
            android:layout_toStartOf="@+id/btn_gk_post"
            android:background="@android:drawable/btn_default" />
    </RelativeLayout>

