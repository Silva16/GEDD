        android:layout_alignStart="@+id/finalization"
        android:layout_marginBottom="5dp"
        android:background="#ff145d6e"
        android:layout_below="@+id/finalization">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Acção Ofensiva"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgbtn_player6"
            android:textColor="#FFFFFF" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Golo"
            android:id="@+id/btn_goal"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/btn_defense"
            android:layout_toStartOf="@+id/btn_defense"
            android:background="@android:drawable/btn_default"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Bloco"
            android:id="@+id/btn_block_atk"
            android:layout_alignTop="@+id/btn_out"
            android:layout_toRightOf="@+id/btn_out"
            android:layout_toEndOf="@+id/btn_out"
            android:background="@android:drawable/btn_default" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Trave"
            android:id="@+id/btn_goalpost"
            android:layout_alignTop="@+id/btn_block_atk"
            android:layout_toRightOf="@+id/btn_block_atk"
            android:layout_toEndOf="@+id/btn_block_atk"
            android:background="@android:drawable/btn_default" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Fora"
            android:id="@+id/btn_out"
            android:layout_alignTop="@+id/btn_defense"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_default" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Defesa"
            android:id="@+id/btn_defense"
            android:layout_alignTop="@+id/btn_goal"
            android:layout_toLeftOf="@+id/btn_out"
            android:layout_toStartOf="@+id/btn_out"
            android:background="@android:drawable/btn_default" />

    </RelativeLayout>

    <RelativeLayout
