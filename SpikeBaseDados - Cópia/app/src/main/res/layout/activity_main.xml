<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="315dp"
        android:id="@+id/field"
        android:layout_below="@+id/textView_time"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="315dp"
            android:layout_height="189dp"
            android:id="@+id/zones"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 1"
                android:id="@+id/btn_zone_1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 2"
                android:id="@+id/btn_zone_2"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_zone_1"
                android:layout_toEndOf="@+id/btn_zone_1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 3"
                android:id="@+id/btn_zone_3"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_zone_2"
                android:layout_toEndOf="@+id/btn_zone_2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 4"
                android:id="@+id/btn_zone_4"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_zone_3"
                android:layout_toEndOf="@+id/btn_zone_3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 5"
                android:id="@+id/btn_zone_5"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_zone_4"
                android:layout_toEndOf="@+id/btn_zone_4" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 6"
                android:id="@+id/btn_zone_6"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btn_zone_1"
                android:layout_toEndOf="@+id/btn_zone_1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:text="Zona 7"
                android:id="@+id/btn_zone_7"
                android:layout_below="@+id/btn_zone_3"
                android:layout_alignLeft="@+id/btn_zone_2"
                android:layout_alignStart="@+id/btn_zone_2"
                android:layout_toLeftOf="@+id/btn_zone_5"
                android:layout_toStartOf="@+id/btn_zone_5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 8"
                android:id="@+id/btn_zone_8"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/btn_zone_3"
                android:layout_alignStart="@+id/btn_zone_3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="63dp"
                android:layout_height="105dp"
                android:text="Zona 9"
                android:id="@+id/btn_zone_9"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btn_zone_8"
                android:layout_toEndOf="@+id/btn_zone_8" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="126dp">

            <TableRow>

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B7"
                    android:id="@+id/btn_b7"
                    android:layout_alignTop="@+id/btn_b8"
                    android:layout_toLeftOf="@+id/btn_b8"
                    android:layout_toStartOf="@+id/btn_b8" />

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B8"
                    android:id="@+id/btn_b8"
                    android:layout_above="@+id/btn_zone_3"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B9"
                    android:id="@+id/btn_b9"
                    android:layout_below="@+id/btn_b5"
                    android:layout_toRightOf="@+id/btn_b8"
                    android:layout_toEndOf="@+id/btn_b8" />
            </TableRow>

            <TableRow>
                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B4"
                    android:id="@+id/btn_b4"
                    android:layout_above="@+id/btn_b7"
                    android:layout_alignLeft="@+id/btn_b7"
                    android:layout_alignStart="@+id/btn_b7" />

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B5"
                    android:id="@+id/btn_b5"
                    android:layout_alignTop="@+id/btn_b6"
                    android:layout_toRightOf="@+id/btn_b7"
                    android:layout_toEndOf="@+id/btn_b7" />

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B6"
                    android:id="@+id/btn_b6"
                    android:layout_below="@+id/btn_b2"
                    android:layout_toRightOf="@+id/btn_b5"
                    android:layout_toEndOf="@+id/btn_b5" />
            </TableRow>

            <TableRow>

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B1"
                    android:id="@+id/btn_b1"
                    android:layout_above="@+id/btn_b4"
                    android:layout_alignLeft="@+id/btn_b4"
                    android:layout_alignStart="@+id/btn_b4" />

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B2"
                    android:id="@+id/btn_b2"
                    android:layout_alignTop="@+id/btn_b1"
                    android:layout_toRightOf="@+id/btn_b4"
                    android:layout_toEndOf="@+id/btn_b4" />

                <Button
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:text="B3"
                    android:id="@+id/btn_b3"
                    android:layout_alignTop="@+id/btn_b2"
                    android:layout_toRightOf="@+id/btn_b2"
                    android:layout_toEndOf="@+id/btn_b2" />
            </TableRow>

        </TableLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/button9"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/goalLayout"
            android:layout_toLeftOf="@+id/zones"
            android:layout_toStartOf="@+id/zones"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="Fora"
            android:id="@+id/outside"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/goalLayout"
            android:layout_alignEnd="@+id/goalLayout" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="Trave / Poste"
            android:id="@+id/post"
            android:layout_below="@+id/outside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button9"
            android:layout_toStartOf="@+id/button9" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/players"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/field"
        android:focusable="false">

        <ImageButton
            android:src="@drawable/substituicao"
            android:layout_width="63dp"
            android:layout_height="50dp"
            android:id="@+id/imgbtn_subs"
            android:scaleType="fitCenter"
            android:background="#0fffffff"
            android:layout_below="@+id/imgbtn_player3"
            android:layout_alignRight="@+id/imgbtn_player6"
            android:layout_alignEnd="@+id/imgbtn_player6" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/shirtmdpi"
            android:background="?android:selectableItemBackground"
            android:clickable="true" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player1"
            android:layout_toEndOf="@+id/imgbtn_player1"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/shirtmdpi"
            android:background="?android:selectableItemBackground"
            android:clickable="true" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player2"
            android:layout_toEndOf="@+id/imgbtn_player2"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/shirtmdpi"
            android:background="?android:selectableItemBackground"
            android:clickable="false" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player3"
            android:layout_toEndOf="@+id/imgbtn_player3"
            android:layout_marginRight="7dp"
            android:src="@drawable/shirtmdpi"
            android:background="?android:selectableItemBackground"
            android:clickable="false" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player4"
            android:layout_toEndOf="@+id/imgbtn_player4"
            android:layout_marginRight="7dp"
            android:src="@drawable/shirtmdpi"
            android:background="?android:selectableItemBackground"
            android:clickable="false" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imgbtn_player6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgbtn_player5"
            android:layout_toEndOf="@+id/imgbtn_player5"
            android:src="@drawable/shirtmdpi"
            android:background="?android:selectableItemBackground"
            android:clickable="false" />

        <Button
            android:layout_width="100dp"
            android:layout_height="63dp"
            android:id="@+id/imageButton"
            android:layout_below="@+id/imgbtn_player4"
            android:layout_toRightOf="@+id/imgbtn_player2"
            android:layout_alignRight="@+id/imgbtn_player4"
            android:layout_alignEnd="@+id/imgbtn_player4"
            android:text="1 - GR" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Substituição"
            android:id="@+id/textViewSub"
            android:textSize="16dp"
            android:layout_alignBaseline="@+id/imageButton"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_toLeftOf="@+id/imgbtn_subs"
            android:layout_toStartOf="@+id/imgbtn_subs" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3"
            android:gravity="center"
            android:id="@+id/textView6"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="25dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="31dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="7"
            android:gravity="center"
            android:id="@+id/textView7"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="25dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_toRightOf="@+id/imgbtn_player1"
            android:layout_toEndOf="@+id/imgbtn_player1" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10"
            android:gravity="center"
            android:id="@+id/textView8"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="25dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/imgbtn_player3"
            android:layout_alignStart="@+id/imgbtn_player3" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="14"
            android:gravity="center"
            android:id="@+id/textView9"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="25dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_toRightOf="@+id/imgbtn_player3"
            android:layout_toEndOf="@+id/imgbtn_player3" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="21"
            android:gravity="center"
            android:id="@+id/textView10"
            android:textColor="#FFFFFF"
            android:layout_alignTop="@+id/textView9"
            android:layout_toRightOf="@+id/imgbtn_player4"
            android:layout_toEndOf="@+id/imgbtn_player4"
            android:layout_marginLeft="23dp" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="99"
