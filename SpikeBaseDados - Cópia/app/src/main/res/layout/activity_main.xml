            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_b3"
            android:layout_toStartOf="@+id/btn_b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Leiria"
            android:id="@+id/textView_team2"
            android:layout_toRightOf="@+id/btn_out"
            android:layout_toEndOf="@+id/btn_out"
            android:layout_alignTop="@+id/textView_team1"
            android:password="false" />

    </LinearLayout>

