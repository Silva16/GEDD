            android:layout_marginLeft="23dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finalization"
        android:layout_below="@+id/players"
        android:layout_alignLeft="@+id/players"
        android:layout_alignStart="@+id/players"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Finalização"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:text="Contra-Ataque"
            android:id="@+id/btn_ca"
            android:textSize="13dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:text="6 metros"
            android:id="@+id/btn_6m"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/btn_ca"
            android:layout_toEndOf="@+id/btn_ca" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:text="7 metros"
            android:id="@+id/btn_7m"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/btn_6m"
            android:layout_toEndOf="@+id/btn_6m" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:text="9 metros"
            android:id="@+id/btn_9m"
            android:layout_below="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offensiveAction"
        android:layout_below="@+id/finalization"
        android:layout_alignLeft="@+id/finalization"
        android:layout_alignStart="@+id/finalization"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Acção Ofensiva"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgbtn_player6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Golo"
            android:id="@+id/btn_goal"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Bloco"
            android:id="@+id/btn_block_atk"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/btn_out"
            android:layout_toEndOf="@+id/btn_out" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Trave"
            android:id="@+id/btn_goalpost"
            android:layout_alignTop="@+id/btn_block_atk"
            android:layout_toRightOf="@+id/btn_block_atk"
            android:layout_toEndOf="@+id/btn_block_atk" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Fora"
            android:id="@+id/btn_out"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/btn_defense"
            android:layout_toEndOf="@+id/btn_defense" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:text="Defesa"
            android:id="@+id/btn_defense"
            android:layout_alignTop="@+id/btn_goal"
            android:layout_toRightOf="@+id/btn_goal"
            android:layout_toEndOf="@+id/btn_goal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
