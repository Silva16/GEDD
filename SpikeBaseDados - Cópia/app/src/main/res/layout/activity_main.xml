        android:layout_below="@+id/offensiveAction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Acção Defensiva"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_block_def"
            android:layout_toEndOf="@+id/btn_block_def" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="115dp"
            android:layout_height="63dp"
            android:text="Bloco"
            android:id="@+id/btn_block_def"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btn_unarm"
            android:layout_toStartOf="@+id/btn_unarm" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="115dp"
            android:layout_height="63dp"
            android:text="Desarme"
            android:id="@+id/btn_unarm"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="115dp"
            android:layout_height="63dp"
            android:text="Interceção"
            android:id="@+id/btn_interception"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btn_unarm"
            android:layout_toEndOf="@+id/btn_unarm" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Benfica"
            android:id="@+id/textView_team1"
            android:paddingEnd="5px"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/scoreLayout"
            android:layout_toStartOf="@+id/scoreLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
